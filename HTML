  <script>
    function speak() {
      const text = document.getElementById('text').value;
      const voiceOption = document.getElementById('voice').value;

      const msg = new SpeechSynthesisUtterance();
      msg.text = text;
      msg.lang = voiceOption;

      speechSynthesis.speak(msg);
    }
  </script>
